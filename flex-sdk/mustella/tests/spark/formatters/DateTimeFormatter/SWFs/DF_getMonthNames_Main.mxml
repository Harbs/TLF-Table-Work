<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600">
	<fx:Script>
		<![CDATA[
			
			import flash.globalization.DateTimeFormatter;
			import spark.formatters.DateTimeFormatter;
			
			public var dtfLocale:spark.formatters.DateTimeFormatter = new spark.formatters.DateTimeFormatter();
			public var gslibDF:flash.globalization.DateTimeFormatter = new flash.globalization.DateTimeFormatter('en-US');
			[Bindable]
			private var gslibErrorStr:String;
			[Bindable]
			private var errorStr:String;
			public function testGslibArgError(errorObject:String):void				
			{				
				try					
				{					
					gslibErrorStr = "No Error";					
					switch(errorObject)						
					{						
						case 'DateTimeNameStyle':						
							gslibDF.getMonthNames('invalid','standalone');							
						case 'DateTimeNameContext':							
							gslibDF.getMonthNames('full','invalid');							
						case 'both':							
							gslibDF.getMonthNames('invalid','invalid');							
					}					
				}catch(e:Error)					
				{					
					gslibErrorStr = e.toString();					
				}				
				trace(gslibErrorStr);				
			}
			
			public function testArgError(errorObject:String):void
			{
				try
				{
					errorStr = "No Error";
					switch(errorObject)
					{
						case 'DateTimeNameStyle':
							dtFormatter.getMonthNames('invalid','standalone');
						case 'DateTimeNameContext':
							dtFormatter.getMonthNames('full','invalid');
						case 'both':
							dtFormatter.getMonthNames('invalid','invalid');
					}
				}
				catch(e:Error)
				{
					errorStr = e.toString();
				}
				trace(errorStr);
			}
			public function testGslibTypeError(errorObject:String):void				
			{				
				try					
				{					
					gslibErrorStr = "No Error";					
					switch(errorObject)						
					{						
						case 'DateTimeNameStyle':							
							gslibDF.getMonthNames(null,'standalone');							
						case 'DateTimeNameContext':							
							gslibDF.getMonthNames('full',null);							
						case 'both':							
							gslibDF.getMonthNames(null,null);							
					}					
				}				
				catch(e:Error)					
				{					
					gslibErrorStr = e.toString();					
				}				
				trace(gslibErrorStr);				
			}
			
			public function testTypeError(errorObject:String):void
			{
				try
				{
					errorStr = "No Error";
					switch(errorObject)
					{
						case 'DateTimeNameStyle':
							dtFormatter.getMonthNames(null,'standalone');
						case 'DateTimeNameContext':
							dtFormatter.getMonthNames('full',null);
						case 'both':
							dtFormatter.getMonthNames(null,null);
					}
				}
				catch(e:Error)
				{
					errorStr = e.toString();
				}
				trace(errorStr);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->	
		<s:DateTimeFormatter id="dtFormatter"/>
		<s:DateTimeFormatter id="dtfLocaleInline"/>
	</fx:Declarations>
	
	<s:VGroup>
		<s:Label id="testErrorL" text="{errorStr}"/>
		<s:Label id="testGslibErrorL" text="{gslibErrorStr}"/>
	</s:VGroup>
	
</s:Application>
