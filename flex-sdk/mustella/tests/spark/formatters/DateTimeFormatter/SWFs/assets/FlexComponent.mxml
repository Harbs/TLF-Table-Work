<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="400" height="300">

	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		.styleInComponent {
			locale:'ru-RU';
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import assets.DFConstants;
			import spark.formatters.DateTimeFormatter;
			public var dtFormatterNoLocale:spark.formatters.DateTimeFormatter = new DateTimeFormatter();
			
			[Bindable]
			private var formatStr:String;
			
			public function formatDate(aDate:Date):String
			{
				formatStr = componentDTF.format(aDate);
				return formatStr;
			}
			
			public function formatDateInComponent(aDate:Date):String
			{
				formatStr = componentDTFStyle.format(aDate);
				return formatStr;
			}
			
			public function set dateStyle(dateStyle:String):void
			{
				componentDTF.dateStyle = dateStyle;
				componentDTFStyle.dateStyle = dateStyle;
			}
			
			public function set timeStyle(timeStyle:String):void
			{
				componentDTF.timeStyle = timeStyle;
				componentDTFStyle.timeStyle = timeStyle;
			}
			
			public function set locale(locale:String):void
			{
				componentDTF.setStyle("locale",locale);
			}
			
			public function get lastOperationStatus():String
			{
				return componentDTF.lastOperationStatus;
			}
			
			public function get lastOperationStatusStyle():String
			{
				return componentDTFStyle.lastOperationStatus;
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:DateTimeFormatter id="componentDTF"/>
		<s:DateTimeFormatter id="componentDTFStyle" styleName="styleInComponent"/>
	</fx:Declarations>
	
	<s:Label id="styleLabel" text="{componentDTF.format(DFConstants.testDate)}" />
</s:Group>
