<UnitTester testDir="spark/formatters/CurrencyFormatter/Styles/" testSWF="CF_locale_inheritance_module_app.mxml" xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:s="library://ns.adobe.com/flex/spark" xmlns="*">
    <mx:Script><![CDATA[
			import flash.globalization.*;
			import assets.CFConstant;
			
			public var cfGSLib:flash.globalization.CurrencyFormatter;
			
