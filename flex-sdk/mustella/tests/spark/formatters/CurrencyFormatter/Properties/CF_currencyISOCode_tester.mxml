<UnitTester testDir="spark/formatters/CurrencyFormatter/Properties/"  
			xmlns:mx="http://www.adobe.com/2006/mxml" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns="*" 
			testSWF="CF_currencyISOCode.mxml">
	
	<mx:Script>
		<![CDATA[
			import flash.globalization.CurrencyFormatter;
			import assets.CFConstant;
			
			public var cfGSLib:flash.globalization.CurrencyFormatter;
			
			public static function init(o:DisplayObject):void
			{
			}
		]]>
	</mx:Script>
	
	<mx:Metadata>
		<![CDATA[
		
		[Mixin]
		
		]]>
	</mx:Metadata>
	<!--This test file is to test "currencyISOCode" property-->
	<testCases>
		<!--the test case is for Checking default currencyISOCode-->
		<TestCase testID="CF_currencyISOCode_default_test1" description="the test case is for Checking default currencyISOCode" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('en-US')" />
				<ResetComponent target="cf" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cf.initialized(null,'cf')"/>
				<Pause timeout="{CFConstant.pauseTime}"/>
			</setup>
			<body>
				<AssertPropertyValue target="cf" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode" />
			</body>
		</TestCase>
		
		<!--the test case is for Checking currencyISOCode for specified locale  -->
		<TestCase testID="CF_currencyISOCode_zh_CN_test2" description="the test case is for Checking currencyISOCode for specified locale" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<ResetComponent target="cf" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cf.initialized(null,'cf')"/>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('zh_CN')" />
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle styleName="locale" target="cf" value="zh_CN" waitEvent="change"/>
			</setup>
			<body>
				<AssertPropertyValue target="cf" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode" />
			</body>
		</TestCase>
		
		<!--the test case is for setting currencyISOCode for default locale -->
		<TestCase testID="CF_currencyISOCode_setCurrencyISOCode_test3" description="the test case is for setting currencyISOCode for default locale" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('en_US')" />
				<RunCode code="cfGSLib.setCurrency('UDD','')" />	
				<ResetComponent target="cf" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cf.initialized(null,'cf')"/>
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetProperty propertyName="currencyISOCode" target="cf" value="UDD" waitEvent="change"/>
			</setup>
			<body>
				<AssertPropertyValue target="cf" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode"/>
				<AssertPropertyValue target="cf" propertyName="lastOperationStatus" valueExpression="value=cfGSLib.lastOperationStatus"/>
			</body>
		</TestCase>	
		
		<!-- set currencyISOCode from <fx:script>  -->
		<TestCase testID="CF_currencyISOCode_setCurrencyISOCode_test4" description="set currencyISOCode in script" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('zh_CN')" />
				<RunCode code="cfGSLib.setCurrency('CYY','')" />	
				<SetStyle styleName="locale" target="cfScript" value="zh_CN" waitEvent="change"/>
				<RunCode code="application.setCFCurrencyISOCode(application.cfScript, 'CYY')"/>
				<Pause timeout="{CFConstant.pauseTime}"/>
			</setup>
			<body>
				<AssertPropertyValue target="cfScript" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode"/>
				<AssertPropertyValue target="cf" propertyName="lastOperationStatus" valueExpression="value=cfGSLib.lastOperationStatus"/>
			</body>
		</TestCase>
		
		<!--set currencyISOCode for specified locale  -->
		<TestCase testID="CF_currencyISOCode_setCurrencyISOCode_test5" description="set currencyISOCode for specified locale" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('zh_CN')" />
				<RunCode code="cfGSLib.setCurrency('UDD','')" />	
				<ResetComponent target="cf" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cf.initialized(null,'cf')"/>
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle styleName="locale" target="cf" value="zh_CN" waitEvent="change"/>
				<SetProperty propertyName="currencyISOCode" target="cf" value="UDD" waitEvent="change"/>
			</setup>
			<body>
				<AssertPropertyValue target="cf" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode"/>
				<AssertPropertyValue target="cf" propertyName="lastOperationStatus" valueExpression="value=cfGSLib.lastOperationStatus"/>
			</body>
		</TestCase>
		
		<!--set invalid currencyISOCode -->
		<TestCase testID="CF_currencyISOCode_invalid_test6" description="set invalid currencyISOCode" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<ResetComponent target="cfScript" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cfScript.initialized(null,'cfScript')"/>
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle styleName="locale" target="cfScript" value="zh_CN" waitEvent="change"/>
			</setup>
			<body>
				<AssertMethodValue method="value=application.setCFCurrencyISOCode(application.cfScript, 'invalid')" 
								   valueExpression="value=application.setGSCurrencyISOCode(application.CFgslibError, 'invalid')"/>
				<AssertPropertyValue target="cfScript" propertyName="lastOperationStatus" 
									 valueExpression="value=application.CFgslibError.lastOperationStatus"/>
			</body>
		</TestCase>
		
		<!--set currencyISOCode to null-->
		<TestCase testID="CF_currencyISOCode_null_test7" description="set currencyISOCode to null" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<ResetComponent target="cfScript" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cfScript.initialized(null,'cfScript')"/>
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle styleName="locale" target="cfScript" value="zh_CN" waitEvent="change"/>
			</setup>
			<body>
				<AssertMethodValue method="value=application.setCFCurrencyISOCode(application.cfScript, null)" 
								   valueExpression="value=application.setGSCurrencyISOCode(application.CFgslibError2, null)"/>
				<AssertPropertyValue target="cfScript" propertyName="lastOperationStatus" 
									 valueExpression="value=application.CFgslibError2.lastOperationStatus"/>
			</body>
		</TestCase>
		
		<!-- Set currencyISOCode from inline-->
		<TestCase testID="CF_currencyISOCode_inline_test8" description="Set currencyISOCode from inline" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('en-US')" />
				<RunCode code="cfGSLib.setCurrency('UDD','')" />
				<Pause timeout="{CFConstant.pauseTime}"/>
			</setup>
			<body>
				<AssertPropertyValue target="cfInline1" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode"/>
			</body>
		</TestCase>
		
		<!-- Set currencyISOCode from inline-->
		<TestCase testID="CF_currencyISOCode_inline_test9" description="Set currencyISOCode from inline" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('bn-BD')" />
				<RunCode code="cfGSLib.setCurrency('CYY','')" />
				<Pause timeout="{CFConstant.pauseTime}"/>
			</setup>
			<body>
				<AssertPropertyValue target="cfInline2" propertyName="currencyISOCode" valueExpression="value=cfGSLib.currencyISOCode"/>
			</body>
		</TestCase>
		
		<!--test binding currencyISOCode properties by seting currencyISOCode-->
		<TestCase testID="CF_currencyISOCode_binding_test10" description="test binding currencyISOCode properties by seting currencyISOCode" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('en-US')" />
				<RunCode code="cfGSLib.setCurrency('CYY','')" />
				<SetProperty propertyName="currencyISOCode" target="cfBinding" value="CYY" waitEvent="change"/>				
			</setup>
			<body>
				<AssertPropertyValue target="cfLabel" propertyName="text" valueExpression="value=cfGSLib.currencyISOCode" />
			</body>
		</TestCase>	
		
		<!--bind currencyISOCode properties by seting locale-->
		<TestCase testID="CF_currencyISOCode_binding_test11" description="bind currencyISOCode properties by seting locale" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<ResetComponent target="cfBinding" className="spark.formatters.CurrencyFormatter"/> 
				<RunCode code="application.cfBinding.initialized(null,'cfBinding')"/>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('zh_CN')" />
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle styleName="locale" target="cfBinding" value="zh_CN" waitEvent="change"/>
			</setup>
			<body>
				<AssertPropertyValue target="cfLabel" propertyName="text" valueExpression="value=cfGSLib.currencyISOCode" />
			</body>
		</TestCase>	
		
		<!--Binding property when locale change-->
		<TestCase testID="CF_currencyISOCode_binding_test12" description="Binding property when locale change" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('ar-JO')" />
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle target="cfBLocale1" styleName="locale" value="fr-FR" waitEvent="change"/>
			</setup>
			<body>
				<SetStyle target="cfBLocale1" styleName="locale" value="ar-JO"/>
				<AssertEvent target="cfLa" eventName="updateComplete" eventClass="mx.events::FlexEvent"/>
				<AssertPropertyValue target="cfLa" propertyName="text" valueExpression="value=cfGSLib.currencyISOCode"/>
			</body>
		</TestCase>	
		
		<!--Binding property when locale change-->
		<TestCase testID="CF_currencyISOCode_binding_test13" description="Binding property when locale change" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<RunCode code="cfGSLib=new flash.globalization.CurrencyFormatter('zh-CN')" />
				<Pause timeout="{CFConstant.pauseTime}"/>
				<SetStyle target="cfBLocale2" styleName="locale" value="fr-FR" waitEvent="change"/>
			</setup>
			<body>
				<SetStyle target="cfBLocale2" styleName="locale" value="zh-CN"/>
				<AssertEvent target="cfLb" eventName="updateComplete" eventClass="mx.events::FlexEvent"/>
				<AssertPropertyValue target="cfLb" propertyName="text" valueExpression="value=cfGSLib.currencyISOCode"/>
			</body>
		</TestCase>	
		
		<!-- if property currencyISOCode has been set inline, it doesnot change with locale -->
		<TestCase testID="CF_currencyISOCode_inline_changeLocale_test14" description="if property currencyISOCode has been set inline, it doesnot change with locale" keywords="[CurrencyFormatter, currencyISOCode]">
			<setup>
				<SetStyle target="cfInline_ChangeLocale" styleName="locale" value="fr-FR" waitEvent="change"/>
			</setup>
			<body>
				<AssertPropertyValue target="cfInline_ChangeLocale" propertyName="currencyISOCode" value="JOD"/>
			</body>
		</TestCase>	
		
	</testCases>
</UnitTester>
