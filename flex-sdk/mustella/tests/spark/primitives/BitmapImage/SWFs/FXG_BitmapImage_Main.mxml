<mx:Application backgroundColor="0xFFFFFF" xmlns:fx="http://ns.adobe.com/mxml/2009"
     xmlns:mx="library://ns.adobe.com/flex/mx"  xmlns:s="library://ns.adobe.com/flex/spark"
     width="800" height="700"  xmlns:comps="comps.*" >
<fx:Script>
    <![CDATA[

	    [Embed(source="../../../../../Assets/Images/smallredrect.jpg")]
		public var kitler:Class;

		[Embed(source="../../../../../Assets/Images/smallredrect.jpg",scaleGridTop=10,scaleGridBottom=18,scaleGridLeft=10,scaleGridRight=20)]
		public var kitlerScale9:Class;

		[Embed(source="../../../../../Assets/Images/smallorangerect.jpg")]
		public var kenny:Class;

		[Embed(source="../../../../../Assets/Images/smallyellowrect.jpg")]
		public var monkeys:Class;

	    [Embed(source="../../../../../Assets/Images/smallgreenrect.jpg")]
		public var bulldog:Class;

		[Embed(source="../../../../../Assets/Images/smallbluerect.jpg")]
		public var dog2:Class;

		[Embed(source="../../../../../Assets/Images/smallpurplerect.jpg")]
