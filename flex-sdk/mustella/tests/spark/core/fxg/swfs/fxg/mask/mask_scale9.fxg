<Graphic xmlns="http://ns.adobe.com/fxg/2008" version="1.0">
	<Group x="50" y="50">
		    <Group x="20" y="50" scaleX="2.5" scaleY="2.5" alpha="0.5"
			scaleGridLeft="8" scaleGridTop="8" scaleGridRight="92" scaleGridBottom="17">
			<Rect maskType="clip" width="100" height="25" radiusX="8" radiusY="8">
				<mask>
					<Group>
						<filters>
							<BevelFilter distance="15" highlightAlpha="0.5" highlightColor="#228B22" shadowAlpha="0.5" shadowColor="#FF1493" type="full"/>
						</filters>	
						<Ellipse width="140" height="70">
							<fill>
								<RadialGradient x="50" y="10" scaleX="100" scaleY="60" focalPointRatio="0">
									<GradientEntry color="#0900b2" ratio="0"/>
									<GradientEntry color="#ff0000" ratio="0.5"/>
									<GradientEntry color="#fffc00" ratio="1"/>
								</RadialGradient>
							</fill>
							<stroke>
							  <SolidColorStroke caps="none" weight="1" joints="miter" miterLimit="4"/>
							</stroke>
						</Ellipse>
					</Group>
				</mask>		      								       
				<stroke>
					<SolidColorStroke color="#000000" weight="1"/>
				</stroke>
				<fill>
					<SolidColor color="#0000FF" />
				</fill>
			</Rect>
		    </Group>
		    <Group x="20" y="300" scaleX="2.5" scaleY="2.5" alpha="0.5">
			<Rect maskType="alpha" width="100" height="25" radiusX="8" radiusY="8" alpha="0.8">
				<mask>
					<Group alpha="0.5">
						<filters>
							<BevelFilter distance="15" highlightAlpha="0.5" highlightColor="#228B22" shadowAlpha="0.5" shadowColor="#FF1493" type="full"/>
						</filters>	
						<Ellipse width="140" height="70">
							<fill>
								<RadialGradient x="50" y="10" scaleX="100" scaleY="60" focalPointRatio="0">
									<GradientEntry color="#0900b2" ratio="0"/>
									<GradientEntry color="#ff0000" ratio="0.5"/>
									<GradientEntry color="#fffc00" ratio="1"/>
								</RadialGradient>
							</fill>
							<stroke>
							  <SolidColorStroke caps="none" weight="1" joints="miter" miterLimit="4"/>
							</stroke>
						</Ellipse>
					</Group>
				</mask>		      								       
				<stroke>
					<SolidColorStroke color="#000000" weight="1"/>
				</stroke>
				<fill>
					<SolidColor color="#0000FF" />
				</fill>
			</Rect>
		    </Group>   
		
	</Group>
	
</Graphic>
