<UnitTester testDir="spark/validators/NumberValidator/Styles/"  
			xmlns:mx="http://www.adobe.com/2006/mxml" 
			xmlns:s="library://ns.adobe.com/flex/spark" xmlns="*" 
			testSWF="NV_localStyle_typeSelector.mxml">

    <mx:Script>
    <![CDATA[

		import flash.globalization.NumberFormatter;
		import assets.NVConstants;
		
		public var nfGSLib:flash.globalization.NumberFormatter;
		
		public static function init(o:DisplayObject):void      
		{
			
        }


    ]]>
    </mx:Script>

    <mx:Metadata>
    <![CDATA[
        [Mixin]
    ]]>
    </mx:Metadata>

<!--This test file is to test local Type Selector style -->
<testCases>

	<!-- This testcase is for Type style -->
	<TestCase testID="NV_localStyle_typeSelector_TypeStyle_test1" description="Type Selector" keywords="[NumberValidator, Type Selector]">
		<setup>
			<RunCode code="nfGSLib=new flash.globalization.NumberFormatter('zh-CN')" />
			<Pause timeout="{NVConstants.pauseTime}"/>
		</setup>
		<body>
			<AssertPropertyValue target="nv" propertyName="actualLocaleIDName" valueExpression="value=nfGSLib.actualLocaleIDName" />
			<AssertPropertyValue target="nv" propertyName="lastOperationStatus" valueExpression="value=nfGSLib.lastOperationStatus"/>
		</body>
	</TestCase>
	
	<!-- This testcase is for testing Class selector has higher priority than Type Selector. -->
	<TestCase testID="NV_localStyle_typeSelector_ priority_test2" 
			  description="This testcase is for testing Class selector has higher priority than Type Selector" keywords="[NumberValidator,Type Selector]">
		<setup>
			<RunCode code="nfGSLib=new flash.globalization.NumberFormatter('ru_RU')" />
			<Pause timeout="{NVConstants.pauseTime}"/>
		</setup>
		<body>
			<AssertPropertyValue target="nvType" propertyName="actualLocaleIDName" valueExpression="value=nfGSLib.actualLocaleIDName" />
			<AssertPropertyValue target="nvType" propertyName="lastOperationStatus" valueExpression="value=nfGSLib.lastOperationStatus"/>
		</body>
	</TestCase>

</testCases>

	
</UnitTester>
