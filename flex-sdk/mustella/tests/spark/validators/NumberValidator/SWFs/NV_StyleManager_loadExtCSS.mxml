<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" width="1000" height="100%">
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
		.myStyle {
			locale:'ru_RU';
		}	
		
		s|NumberValidator {
			locale:'en_US';
		}
		
		#nvlocalIDSelector{
			locale:'fr-CA';
		}
		
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import flash.globalization.*;
			
			import mx.events.StyleEvent;
			import mx.styles.IStyleManager2;
			
			private var myStyleManager:IStyleManager2 ;
			
			public function loadExtCss():void {
				myStyleManager = StyleManager.getStyleManager(this.moduleFactory);
				
				var loadEvent:IEventDispatcher = myStyleManager.loadStyleDeclarations("assets/myExtStyle.swf");
				
				loadEvent.addEventListener(StyleEvent.COMPLETE, loadComplete);
			}
			
			private function loadComplete(event:StyleEvent):void {
				this.dispatchEvent(new Event("nvLoadStyleCompleteEve"));
			}
			
			//this function is used to unload external type style with styleManager
			public function unloadStyle():void  {
				myStyleManager = StyleManager.getStyleManager(this.moduleFactory);
				myStyleManager.unloadStyleDeclarations("assets/myExtStyle.swf", true);
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		
		<!-- the NumberFormatter for testing loading external css -->
		<s:NumberValidator id="nvExtTypeSelector" />
		<s:NumberValidator id="nvExtClassSelector"  styleName="myStyle"/>
		<s:NumberValidator id="nvIdSelector" />
		
	</fx:Declarations>
	
</s:Application>
