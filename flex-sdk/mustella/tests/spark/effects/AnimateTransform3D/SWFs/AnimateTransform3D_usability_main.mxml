<s:Application 
    height="500" width="500"
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:trixContainer="Containers.*"
    xmlns:trixComponent="Components.*"
    xmlns:trixInterpolator="Interpolators.*"
    backgroundColor="0xFFFFFF">

	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";


		@font-face
		{
		src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Regular.ttf");
		fontFamily: vera1;
		embedAsCFF: true;
		}

		global
		{
		fontFamily: vera1;
		fontLookup: embeddedCFF;
		color: blue;
		}

		s|SkinnableComponent
		{
		fontFamily: vera1;
		fontLookup: embeddedCFF;
		color: black;
		}
	</fx:Style>
	
    <fx:Script>
        <![CDATA[
        import mx.core.UIComponent;
        
        //The global current test object
        public var uiComponent:UIComponent = new UIComponent();
        public var uiComponent2:UIComponent = new UIComponent();
        
        private function Init():void{}
        ]]>
    </fx:Script>

    <fx:Declarations>
        <s:Power id="pow"/>
        <s:Linear id="lin"/>
        <trixInterpolator:Halfterpolator id="ht"/>

        <s:AnimateTransform3D id="fxa1">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationY">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="180"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaTransform">
            <s:motionPaths>
                <s:SimpleMotionPath property="rotationZ">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="90"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaEaser" >
            <s:motionPaths>
                <s:SimpleMotionPath property="translationY">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="200"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaInterpolator">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationY">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="200"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaTranslateRotate">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationX">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="200"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
                <s:SimpleMotionPath property="translationY">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="200"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
                <s:SimpleMotionPath property="rotationZ">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" valueBy="360"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaRepeat">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationX">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="200"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
                <s:SimpleMotionPath property="translationY">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="500" value="200"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaDuration" duration="500">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationY">
                    <s:keyframes>
                        <s:Keyframe time="0" value="0"/>
                        <s:Keyframe time="1000" value="180"/>
                    </s:keyframes>
                </s:SimpleMotionPath>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaMethod" duration="1000">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationY" valueFrom="0" valueTo="300"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaTranslationXYZ">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationX" valueFrom="0" valueTo="100"/>
                <s:SimpleMotionPath property="translationY" valueFrom="0" valueTo="100"/>
                <s:SimpleMotionPath property="translationZ" valueFrom="0" valueTo="100"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaRotationXYZ">
            <s:motionPaths>
                <s:SimpleMotionPath property="rotationX" valueFrom="0" valueTo="180"/>
                <s:SimpleMotionPath property="rotationY" valueFrom="0" valueTo="180"/>
                <s:SimpleMotionPath property="rotationZ" valueFrom="0" valueTo="180"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaScaleXYZ">
            <s:motionPaths>
                <s:SimpleMotionPath property="scaleX" valueFrom="1" valueTo=".5"/>
                <s:SimpleMotionPath property="scaleY" valueFrom="1" valueTo="2"/>
                <s:SimpleMotionPath property="scaleZ" valueFrom="1" valueTo=".4"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaMoveRotate">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationX" valueFrom="0" valueTo="100"/>
                <s:SimpleMotionPath property="rotationZ" valueFrom="0" valueTo="180"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaMoveScale">
            <s:motionPaths>
                <s:SimpleMotionPath property="translationX" valueFrom="0" valueTo="100"/>
                <s:SimpleMotionPath property="scaleY" valueFrom="1" valueTo=".5"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <s:AnimateTransform3D id="fxaRotateScale" autoCenterTransform="true">
            <s:motionPaths>
                <s:SimpleMotionPath property="rotationZ" valueFrom="0" valueTo="180"/>
                <s:SimpleMotionPath property="scaleY" valueFrom="1" valueTo=".5"/>
            </s:motionPaths>
        </s:AnimateTransform3D>

        <mx:Parallel id="p_fxaFade">
            <s:AnimateTransform3D>
                <s:motionPaths>
                    <s:SimpleMotionPath property="translationX" valueFrom="0" valueTo="100"/>
                    <s:SimpleMotionPath property="translationY" valueFrom="0" valueTo="100"/>
                    <s:SimpleMotionPath property="translationZ" valueFrom="0" valueTo="100"/>
                    <s:SimpleMotionPath property="rotationX" valueFrom="0" valueTo="180"/>
                    <s:SimpleMotionPath property="rotationY" valueFrom="0" valueTo="180"/>
                    <s:SimpleMotionPath property="rotationZ" valueFrom="0" valueTo="180"/>
                    <s:SimpleMotionPath property="scaleX" valueFrom="1" valueTo=".5"/>
                    <s:SimpleMotionPath property="scaleY" valueFrom="1" valueTo="2"/>
                    <s:SimpleMotionPath property="scaleZ" valueFrom="1" valueTo=".4"/>
                </s:motionPaths>
            </s:AnimateTransform3D>
            <s:Fade alphaFrom="1" alphaTo=".2"/>
        </mx:Parallel>

        <s:AnimateTransform3D id="fxaTransition" autoCenterTransform="true" target="{testButton}"/>
    </fx:Declarations>

    <s:states>
        <s:State name="State1"/>
        <s:State name="State2"/>
    </s:states>

    <s:transitions>
        <mx:Transition fromState="State1" toState="State2" effect="{fxaTransition}"/>
        <mx:Transition fromState="State2" toState="State1"/>
    </s:transitions>

    <trixContainer:TrixSparkPanel2 id="testPanel"/>

    <trixComponent:TrixSparkButton id="testButton"
        x="0" y="420"
        width="30" height="30"
   		transformX.State1="100" transformX.State2="200"
   		rotationZ.State1="0" rotationZ.State2="150"/>

</s:Application>
