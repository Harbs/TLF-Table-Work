<!-- 
     Methods.mxml - the following testCases test the given effect's public methods.
-->
<UnitTester 
    testDir="spark/effects/Resize/Methods/"  
    xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns="*" 
    testSWF="../SWFs/Resize_Advanced.mxml">

    <!-- this set of lines form a template that must be in each unit test -->
    <mx:Script>
        <![CDATA[
        public static function init(o:DisplayObject):void{}
        ]]>
    </mx:Script>

    <mx:Metadata>
        <![CDATA[
        [Mixin]
        ]]>
    </mx:Metadata>
    <!-- end of set of lines that must be in each unit test -->

    <mx:Script>
        <![CDATA[
        import spark.effects.Resize;
        ]]>
    </mx:Script>

    <testCases>

        <!-- Construtor - Resize -->
        <TestCase testID="Resize_Constructor_Empty"  keywords="[Resize, method, constructor]" description="Try to initialize the constructor with an empty arg.">
            <body>
                <RunCode code="application.testEffect = new Resize();"/>
            </body>
        </TestCase>

        <TestCase testID="Resize_Constructor_Null"  keywords="[Resize, method, constructor]" description="Try to initialize the constructor with the null arg.">
            <body>
                <RunCode code="application.testEffect = new Resize(null);"/>
            </body>
        </TestCase>

        <TestCase testID="Resize_Constructor_Object"  keywords="[Resize, method, constructor]" description="Try to initialize the constructor with an object.">
            <body>
                <RunCode code="application.testEffect = new Resize(new Object());" />
            </body>
        </TestCase>

        <!-- Resize.getAffectedProperties -->
        <TestCase testID="Resize_GetAffectedProperties"  keywords="[Resize, method, GetAffectedProperties]" description="Test the return values from GetAffectedProperties.">
            <body>
                <AssertMethodValue method="value=application.testEffect.getAffectedProperties()" value="width,height,explicitWidth,explicitHeight,percentWidth,percentHeight,left,right,top,bottom" />
            </body>
        </TestCase>

    </testCases>

</UnitTester>
