<?xml version="1.0" encoding="utf-8"?>
<s:Group
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:d="http://ns.adobe.com/fxg/2008/dt"
    xmlns:s="library://ns.adobe.com/flex/spark"
    >

	<s:layout>
		<s:BasicLayout/>
	</s:layout>

	<s:states>
		<s:State name="s1"/>
		<s:State name="s2"/>
	</s:states>

	<s:transitions>
		<s:Transition>
			<s:Resize id="res" target="{button}"/>
		</s:Transition>
	</s:transitions>

	<s:Button id="button" click="currentState=(currentState=='s1')?'s2':'s1'" width="10%" width.s2="90%"/>

</s:Group>