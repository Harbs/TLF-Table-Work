<UnitTester testDir="spark/globalization/StringTools/Styles/"  
			xmlns:mx="http://www.adobe.com/2006/mxml" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns="*" 
			testSWF="ST_style_Local_Main.mxml">

    <mx:Script>
    <![CDATA[
		import flash.globalization.StringTools;
		import assets.StringToolsTestConstants;
		
		public var stGSLib:flash.globalization.StringTools;
		
        public static function init(o:DisplayObject):void
        {
 
        }
    ]]>
    </mx:Script>

    <mx:Metadata>
    <![CDATA[
        [Mixin]
    ]]>
    </mx:Metadata>
	
<!--This test file is to test "actualLocaleIDName" property-->
<testCases>
	<!--test Global selector -->
	<TestCase testID="StringTools_local_main_GlobalSelector_test1" description="test Global selector" keywords="[StringTools, style, global selector]">
		<setup>
			<RunCode code="stGSLib=new flash.globalization.StringTools('lv-LV')" />
			<Pause timeout="{StringToolsTestConstants.pauseTime}" />
		</setup>
		<body>
			<AssertPropertyValue propertyName="actualLocaleIDName" valueExpression="value=stGSLib.actualLocaleIDName" target="stGlobalSelector"/>
		</body>
	</TestCase> 
	
	<!--test Class selector-->
	<TestCase testID="StringTools_local_main_ClassSelector_test2" description="test Class selector" keywords="[StringTools, style, class selector]">
		<setup>
			<RunCode code="stGSLib=new flash.globalization.StringTools('fr-CH')" />
			<Pause timeout="{StringToolsTestConstants.pauseTime}" />
		</setup>
		<body>
			<AssertPropertyValue propertyName="actualLocaleIDName" valueExpression="value=stGSLib.actualLocaleIDName" target="stClassSelector"/>
		</body>
	</TestCase> 
	
	<!--test ID selector -->
	<TestCase testID="StringTools_local_main_IDSelector_test3" description="test ID selector" keywords="[StringTools, style, id selector]">
		<setup>
			<RunCode code="stGSLib=new flash.globalization.StringTools('ru-RU')" />
			<Pause timeout="{StringToolsTestConstants.pauseTime}" />
		</setup>
		<body>
			<AssertPropertyValue propertyName="actualLocaleIDName" valueExpression="value=stGSLib.actualLocaleIDName" target="stIdSelector"/>
		</body>
	</TestCase> 
	
	<!--test Document Property -->
	<TestCase testID="StringTools_local_main_Document_test4" description="test Document Property" keywords="[StringTools, style, document property]">
		<setup>
			<RunCode code="stGSLib=new flash.globalization.StringTools('zh-CN')" />
			<Pause timeout="{StringToolsTestConstants.pauseTime}" />
		</setup>
		<body>
			<AssertPropertyValue propertyName="actualLocaleIDName" valueExpression="value=stGSLib.actualLocaleIDName" target="stDocumentProp"/>
		</body>
	</TestCase> 
	
	<!--test style inheritance with ID Selector and inline style-->
	<TestCase testID="StringTools_local_main_inheritance_IDSelector_inlineStyle_test5" description="test style inheritance with ID Selector and inline style" keywords="[StringTools, style, inheritance]">
		<setup>
			<RunCode code="stGSLib=new flash.globalization.StringTools('zh-CN')" />
			<Pause timeout="{StringToolsTestConstants.pauseTime}" />
		</setup>
		<body>
			<AssertPropertyValue propertyName="actualLocaleIDName" valueExpression="value=stGSLib.actualLocaleIDName" target="inlineClt"/>
		</body>
	</TestCase> 
	
	<!--test style inheritance with ID Selector and Class Selector-->
	<TestCase testID="StringTools_local_main_inheritance_IDSelector_ClassSelector_test6" description="test style inheritance with ID Selector and Class Selector" keywords="[StringTools, style, inheritance]">
		<setup>
			<RunCode code="stGSLib=new flash.globalization.StringTools('ru-RU')" />
			<Pause timeout="{StringToolsTestConstants.pauseTime}" />
		</setup>
		<body>
			<AssertPropertyValue propertyName="actualLocaleIDName" valueExpression="value=stGSLib.actualLocaleIDName" target="idClt"/>
		</body>
	</TestCase> 
	
</testCases>
</UnitTester>
