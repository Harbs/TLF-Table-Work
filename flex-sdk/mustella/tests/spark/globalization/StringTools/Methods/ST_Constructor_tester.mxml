			<AssertMethodValue method="value=application.stDeclarations.toUpperCase('TurkishI: iI &amp; ıİ Ä±Ä°')" valueExpression="value=stGSLib.toUpperCase('TurkishI: iI &amp; ıİ Ä±Ä°')"/>
		</body>
