				<RunCode code="cltGSLibSorting=new flash.globalization.Collator('fr')"/>
				<RunCode code="cltGSLibMatching=new flash.globalization.Collator('fr','matching')"/>
				<Pause timeout="{CollatorTestConstants.pauseTime}"/>
