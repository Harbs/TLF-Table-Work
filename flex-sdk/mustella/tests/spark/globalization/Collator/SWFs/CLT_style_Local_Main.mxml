<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" >

	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		/* Global Selector */
		global{
			locale:'lv-LV';
		}
		
		/* Class Selector */
		.classStyle{
			locale:'fr-CH';
		}
		
		.myStyle{
			locale:'fr-CH';
		}
		/* ID Selector */
		#cltIdSelector{
			locale:'ru-RU';
		}
		
		#inlineClt{
			locale:'ru-RU';
		}
		
		#idClt{
			locale:'ru-RU';
		}
		/* Document property */
		#cltDocumentProp{
			locale:PropertyReference("extString");
		}
	</fx:Style>
	
	<fx:Declarations>
		<!-- the Collator for test class selector -->
		<s:SortingCollator id="cltClassSelector" styleName="classStyle"/>
		
		<!-- the Collator for test id selector -->
		<s:SortingCollator id="cltIdSelector"/>
		
		<!-- the Collator for test document property -->
		<fx:String id="extString">zh-CN</fx:String>
		<s:SortingCollator id="cltDocumentProp"/>
		
		<!-- the Collator for test global selector -->
		<s:SortingCollator id="cltGlobalSelector"/>
		
		<!-- the Collator for test inheritance style with id selector and inline -->
		<s:SortingCollator id="inlineClt" locale="zh-CN"/>
		
		<!-- the Collator for test inheritance style with class selector and id selector -->
		<s:SortingCollator id="idClt" styleName="myStyle"/>
	</fx:Declarations>

</s:Application>
