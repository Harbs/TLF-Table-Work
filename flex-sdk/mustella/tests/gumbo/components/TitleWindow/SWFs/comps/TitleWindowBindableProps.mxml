<s:TitleWindow
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:s="library://ns.adobe.com/flex/spark" title="{titleStr}" minWidth="{minWidthVal}" minHeight="{minHeightVal}">

    <fx:Script>
    	<![CDATA[
    	[Bindable]
    	public var titleStr:String="test titlewindow";
    	[Bindable]
    	public var minWidthVal:Number=300;
    	[Bindable]
    	public var minHeightVal:Number=400;
    	]]>
    </fx:Script>
	<s:Group>
	    <s:layout>
		    <s:BasicLayout/>
	    </s:layout>
	    <s:Button id="childBtn" label="child" left="0" top="0"/>
	    <s:Rect id="childBorder">
		<s:stroke>
			<s:SolidColorStroke color="0x00FF00"/>
		</s:stroke>
	    </s:Rect>  
	</s:Group> 
</s:TitleWindow>