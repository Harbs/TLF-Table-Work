<UnitTester testDir="gumbo/components/DataGrid/Properties/"
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns="*"
    testSWF="DataGrid_globalFormatters.mxml">

    <!-- this set of lines form a template that must be in each unit test -->
    <fx:Script>
        <![CDATA[
        public static function init(o:DisplayObject):void
        {
        }
        ]]>
    </fx:Script>

    <fx:Metadata>
        <![CDATA[
            [Mixin]
        ]]>
    </fx:Metadata>
    <!-- end of set of lines that must be in each unit test -->
    
    <fx:Script>
        <![CDATA[
            {
                import mx.core.FlexGlobals;
            }
        ]]>
    </fx:Script>    

    <testCases>

		<TestCase testID="DataGrid_Properties_globalFormatters" keywords="[DataGrid, Property, CurrencyFormatter, DateTimeFormatter]" description="Test globalized formatters with different locales in DataGrid">			
			<setup>
				<ResetComponent target="myDG_GF" className="components.Custom_DataGrid_GlobalFormatters" waitEvent="updateComplete" />
				<WaitForEvent target="stage" eventName="enterFrame" numExpectedEvents="2"/>				
			</setup>
			<body>
				<CompareBitmap target="myDG_GF" url="../Properties/Baselines/$testID.png"/>
			</body>
		</TestCase>
		
		<TestCase testID="DataGrid_Properties_globalFormatters_dataTip" keywords="[DataGrid, Property, CurrencyFormatter, DateTimeFormatter, dataTip]" description="Test globalized formatters in dataTip of DataGrid">			
			<setup>
				<ResetComponent target="myDG_GF" className="components.Custom_DataGrid_GlobalFormatters" waitEvent="updateComplete" />
				<DispatchMouseEvent type="mouseOver" target="myDG_GF" localX="150" localY="50"/>
				<WaitForEvent target="stage" eventName="enterFrame" numExpectedEvents="2"/>				
			</setup>
			<body>
				<CompareBitmap target="myDG_GF" url="../Properties/Baselines/$testID.png"/>
			</body>
		</TestCase>		
		
    </testCases>
</UnitTester>