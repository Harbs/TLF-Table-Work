        <ResetComponent target="box2" className="Assets::CustomTabBar8" waitEvent="updateComplete" />
    </setup>
    <body>
        <CompareBitmap url="../Integration/baselines/$testID.png" target="box1"  numColorVariances="5" maxColorVariance="10"/>
