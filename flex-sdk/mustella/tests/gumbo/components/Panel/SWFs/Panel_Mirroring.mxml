<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:Comps="Comps.*">
	<fx:Style>		
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		@namespace c "Comps.*";
	
		@font-face {
			src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Regular.ttf");
			fontFamily: MyVera;			
			embedAsCFF: true;
		}
		
		@font-face {
			src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Italic.ttf");
			fontFamily: MyVera;
			fontStyle: italic;
			embedAsCFF: true;
		}
		
		@font-face {
			src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Bold.ttf");
			fontFamily: MyVera;
			fontWeight: bold;
			embedAsCFF: true;
		}
		
		@font-face {
			src: url("../../../../../Assets/Fonts/PT_Serif/PT_Serif-Web-Regular.ttf");
			fontFamily: MyArialHalo;
			embedAsCFF: false;
		}
		
		@font-face {
			src: url("../../../../../Assets/Fonts/PT_Serif/PT_Serif-Web-Italic.ttf");
			fontFamily: MyArialHalo;
			fontStyle: italic;
			embedAsCFF: false;
		}
		
		@font-face {
			src: url("../../../../../Assets/Fonts/PT_Serif/PT_Serif-Web-Bold.ttf");
			fontFamily: MyArialHalo;		
			fontWeight: bold;
			embedAsCFF: false;
		}		
			
		mx|Accordion,
		mx|RadioButton,
		mx|CheckBox,
		mx|List,
		mx|DataGrid,
		mx|Button,
		mx|Text,
		mx|Label,
		mx|NumericStepper,
		mx|ToolTip{
			fontAntiAliasType: "normal";
			fontFamily: MyArialHalo;
			fontSize: 12;
		}

		s|Panel{
			fontAntiAliasType: "normal";
			fontFamily: MyVera;
			fontSize: 12;
            		fontLookup: "embeddedCFF";
		}					
	</fx:Style>   
	<fx:Script>
	<![CDATA[
	
	import spark.layouts.supportClasses.LayoutBase;
	import spark.layouts.HorizontalLayout;
	import spark.layouts.VerticalLayout;

		public function setLayoutHorizontal():void {
			var panelLayout:LayoutBase;
			panelLayout = new HorizontalLayout();
			mainPanel.layout = panelLayout;
		}

		public function setLayoutVertical():void {
			var panelLayout:LayoutBase;
			panelLayout = new VerticalLayout();
			mainPanel.layout = panelLayout;
		}

	
		public function setPanelProps(whatLayout:String):void{
			mainPanel.title='This is the panel';
			mainPanel.setStyle('direction', 'rtl');
			mainPanel.layoutDirection='rtl';
			mainPanel.height=375;
			mainPanel.width=500;
			if (whatLayout == "horizontal")
				setLayoutHorizontal();
			else if (whatLayout == "vertical")
				setLayoutVertical();
		}	
		

	]]>
	</fx:Script>

<Comps:PanelComp_Mirroring id="mainPanel"/>
</s:Application>
