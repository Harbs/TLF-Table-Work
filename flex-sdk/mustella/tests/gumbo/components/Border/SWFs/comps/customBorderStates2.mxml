<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Declarations>
		<s:RadioButtonGroup id="rbg1" />
		<s:RadioButtonGroup id="rbg2" />
	</fx:Declarations>
		
    <s:states>
    	<s:State name="theState1"/>
    	<s:State name="theState2"/>
    </s:states>		
    
    <s:layout>
    	<s:VerticalLayout paddingTop="10" paddingLeft="10"/>
    </s:layout>
    			
	<s:BorderContainer id="myBorder" height="280" width="200" includeIn="theState1">    	  				
		<s:layout>
				<s:VerticalLayout paddingTop="10" paddingLeft="10"/>
		</s:layout>
		
		<s:Label text="theState1 Border" color="blue" fontSize="16"/>
	
		<s:HGroup>
			<s:NumericStepper id="myNS" height="23"/>
			<s:HSlider id="mySlider"/>			
		</s:HGroup>
		
		<s:CheckBox id="myCB" label="CheckBox" fontSize="18"/>
		<s:RadioButton id="myRB" label="RadioButton" fontSize="18" groupName="rbg1"/>
				
		<s:List id="myList" selectedIndex="3" fontSize="10" width="100" height="150">
			<s:dataProvider>
				<s:ArrayList source="[Un, Deux, Trois, Quatre, Cinq, Six, Sept, Huit, Neuf, Dix]"/>
			</s:dataProvider>
		</s:List>		
	</s:BorderContainer>


	<s:BorderContainer id="myBorder2" height="280" width="200" includeIn="theState2">    	  			
		<s:layout>
			<s:VerticalLayout paddingTop="10" paddingLeft="10"/>
		</s:layout>	
		
		<s:Label text="theState2 Border" color="blue" fontSize="16"/>
		
		<s:HGroup>
			<s:NumericStepper id="myNS2" height="23"/>
			<s:HSlider id="mySlider2"/>			
		</s:HGroup>
		
		<s:CheckBox id="myCB2" label="CheckBox" fontSize="18"/>
		<s:RadioButton id="myRB2" label="RadioButton" fontSize="18" groupName="rbg2"/>
		
		<s:DropDownList id="myDDL" prompt="Select One">
			<s:dataProvider>
				<s:ArrayList source="[One,Two,Three,Four,Five,Six,Seven,Eight,Nine,Ten]"/>
			</s:dataProvider>
		</s:DropDownList>				
	</s:BorderContainer>

</s:Group>
