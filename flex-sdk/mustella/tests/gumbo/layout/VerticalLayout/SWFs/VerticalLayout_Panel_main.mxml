<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:local="Assets.*"
	width="500" height="500">

   <fx:Script>
   <![CDATA[
   
	import Assets.*;
	import mx.graphics.*;
	import spark.components.Button;
    import spark.components.Label;
    import spark.components.supportClasses.TextBase;  
    import mx.controls.ComboBox;
    
    public function addHaloCB(p:MyPanel):void{
		  var b:ComboBox = new ComboBox();
		  p.addElement(b);
	}
       
	public function addRect(p:MyPanel):void{
	  var r:MyRect = new MyRect();
	  p.addElement(r);
	}

	public function addSparkBtn(p:MyPanel):void{
	  var b:Button = new Button();
	  b.setStyle('skinClass', MyButtonSkin);
	  p.addElement(b);
    }
       
    public function addSimpleText(p:MyPanel):void{
       var t:Label = new Label();
       t.maxWidth=10000;
       p.addElement(t);
    }
    
    public function addTextGraphic(p:MyPanel):void{
	       var t:TextBase = new TextBase();
	       p.addElement(t);
	}
    
   ]]>
   </fx:Script>

	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
        @font-face{
            src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Regular.ttf");
            fontFamily: myArial;
            embedAsCFF: true;
        }


        @font-face{
            src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Bold.ttf");
            fontWeight: bold;
            fontFamily: myArial;
            embedAsCFF: true;
        }

        @font-face{
            src: url("../../../../../Assets/Fonts/Open_Sans/OpenSans-Italic.ttf");
            fontStyle: italic;
            fontFamily: myArial;
            embedAsCFF: true;

        }

        s|Button{
            fontAntiAliasType: "normal";
            fontFamily: myArial;
            fontSize: 12;
            fontLookup: "embeddedCFF";
        }

        .redText {
            color: #FF0000;
            fontWeight: "bold";
        }

        .greenFill {
            fillColors: #FFFFFF, #0022DD;
        }

        .redFill {
            fillColors: #FFFFFF, #DD2200;
            cornerRadius: 6;
        }
        
        global{
			fontAntiAliasType: "normal";
			fontFamily: myArial;
			fontSize: 12;
			fontLookup: "embeddedCFF";
            kerning: "off";
        }
	</fx:Style>
	
   <local:MyPanel id="pnl"/>
   
   <local:MyScroller id="myScroll"/>
   
   <s:Button id="bindBtn" label="{pnl.vl.firstIndexInView}" visible="false"/>
   <s:Button id="lastViewBtn" label="{pnl.vl.lastIndexInView}" visible="false"/>
   <s:Button id="rowCountBtn" label="{myScroll.scrollPnl.vl.rowCount}" visible="false"/>
   
   <s:Button id="bindScroll" label="{myScroll.scrollPnl.vl.horizontalScrollPosition}" visible="false"/>
   <s:Button id="bindVScroll" label="{myScroll.scrollPnl.vl.verticalScrollPosition}" visible="false"/>
   
</s:Application> 