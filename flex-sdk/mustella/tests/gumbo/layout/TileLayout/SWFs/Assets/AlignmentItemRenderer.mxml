<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark"
	autoDrawBackground="false"
	top="0" right="0" left="0" bottom="0">
	<fx:Script>
		<![CDATA[
		
			override public function set data(value:Object):void {
				super.data = value;
				
				if(value == null){
					// the guts behind virtualization will set the data to null sometimes
					return;
				}
				
				lbl.text = data.myItemIndex;
				
				if (value.majorAxis == "vertical"){
					// majorSize is height
					
					forefrontRect.width = value.minorSize;
					forefrontRect.height = value.majorSize;
				
				} else if (value.majorAxis == "horizontal") {
					// majorSize is width
					forefrontRect.width = value.majorSize;
					forefrontRect.height = value.minorSize;
				
				} else {
					throw new Error('invalid axis');
				}
				
			}
		]]>
	</fx:Script>

    <s:states>
        <mx:State name="normal"/>          
        <mx:State name="hovered"/>
        <mx:State name="selected"/>
    </s:states>
    
    <s:Rect id="bgRect" top="0" left="0" right="0" bottom="0">
    	<s:fill>
    		<s:SolidColor color="0xCCCCCC" />
    	</s:fill>
    </s:Rect>
    
    <s:Rect id="forefrontRect">
        <s:fill>
            <mx:SolidColor color="0xA8C6EE"
                        color.hovered="0xCEDBEF"
                        color.selected="0xCCCCCC" />
        </s:fill>
    </s:Rect>
	
    <mx:Label id="lbl" top="1" left="1" />

</s:ItemRenderer>

