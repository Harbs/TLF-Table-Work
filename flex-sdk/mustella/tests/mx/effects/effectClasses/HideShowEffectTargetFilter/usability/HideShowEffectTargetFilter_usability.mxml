<UnitTester 
    testDir="mx/effects/effectClasses/HideShowEffectTargetFilter/usability/"  
    xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns="*" 
    testSWF="../SWFs/HideShowEffectTargetFilter_main.mxml">

    <!-- this set of lines form a template that must be in each unit test -->
    <mx:Script>
        <![CDATA[
        import mx.core.FlexGlobals;
        import mx.effects.effectClasses.HideShowEffectTargetFilter;
        public static function init(o:DisplayObject):void{}
        ]]>
    </mx:Script>

    <mx:Metadata>
        <![CDATA[
        [Mixin]
        ]]>
    </mx:Metadata>
    <!-- end of set of lines that must be in each unit test -->

    <testCases>

        <!-- Hide -->
        <TestCase testID="HideShowEffectTargetFilter_hide" keywords="[HideShowEffectTargetFilter, usability]" description="Test a hideEffect.">
            <body>
                <RunCode code="FlexGlobals.topLevelApplication.tlist0.visible = false;" waitTarget="myFade" waitEvent="effectEnd"/>
                <CompareBitmap target="tlist0" url="../usability/baseline/HideShowEffectTargetFilter_hide.png" />
            </body>
        </TestCase>

        <!-- Show -->
        <TestCase testID="HideShowEffectTargetFilter_show" keywords="[HideShowEffectTargetFilter, usability]" description="Test the showEffect.">
			<setup>
				<ResetComponent target="tlist0" className="mx.controls.TileList" />
				<SetProperty target="tlist0" propertyName="width" value="400" />
				<SetProperty target="tlist0" propertyName="height" value="400" />
				<SetProperty target="tlist0" propertyName="columnCount" value="4" />
				<SetProperty target="tlist0" propertyName="rowCount" value="4" />
				<SetProperty target="tlist0" propertyName="direction" value="horizontal" />
				<SetProperty target="tlist0" propertyName="allowMultipleSelection" value="true" />
				<SetProperty target="tlist0" propertyName="offscreenExtraRowsOrColumns" value="4" />
				<SetProperty target="tlist0" propertyName="dataProvider" valueExpression="value=application.myDP" />
				<SetProperty target="tlist0" propertyName="visible" value="false" />
				<SetStyle target="tlist0" styleName="fontSize" value="30" />
				<SetStyle target="tlist0" styleName="hideEffect" value="myFade" />
				<SetStyle target="tlist0" styleName="showEffect" value="myFade" waitEvent="updateComplete"/>
			</setup>
            <body>
                <RunCode code="FlexGlobals.topLevelApplication.tlist0.visible = true;" waitTarget="myFade" waitEvent="effectEnd"/>
                <CompareBitmap target="tlist0" url="../usability/baseline/HideShowEffectTargetFilter_show.png" />
            </body>
        </TestCase>
    </testCases>
</UnitTester>
