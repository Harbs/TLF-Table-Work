<UnitTester testDir="containers/Grid/Properties/"  xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*" testSWF="Grid_Basic.mxml">

	<!-- this set of lines Grid a template that must be in each unit test -->
	<mx:Script>
	<![CDATA[
	public static function init(o:DisplayObject):void
	{
	}					
	]]>
	</mx:Script>
	<mx:Metadata>
	<![CDATA[
		[Mixin]
	]]>
	</mx:Metadata>	
	<!-- end of set of lines that must be in each unit test -->
	
	<mx:Style>

	    .myStyle{
		color: #FF0000
	    }
	    .myStyle2{
		color: #0000FF
	    }



	</mx:Style>
	
	
	<mx:Script>
	<![CDATA[	
	import mx.containers.Grid;
	import mx.core.IFlexDisplayObject;
		
	]]>
	</mx:Script>

	<testCases>

		<TestCase testID="Grid_Property_direction_horizontal" keywords="[direction, Grid, horizontal]">
			<setup>
				<ResetComponent target="myCustomGrid" className="CustomGrid"  waitEvent="updateComplete" waitTarget="myCustomGrid"/>
				<SetProperty target="myCustomGrid.myGrid" propertyName="direction" value="horizontal" waitEvent="updateComplete" waitTarget="myCustomGrid.myGrid"/>
			</setup>
			<body>
				<AssertPropertyValue target="myCustomGrid.myGrid" propertyName="direction" value="horizontal"/>
				<CompareBitmap target="myCustomGrid.myGrid" url="../Properties/baselines/direction_horizontal.png" timeout="5000" />
			</body>
		</TestCase>
		<TestCase testID="Grid_Property_direction_vertical" keywords="[direction, Grid, vertical]">
			<setup>
				<ResetComponent target="myCustomGrid" className="CustomGrid"  waitEvent="updateComplete" waitTarget="myCustomGrid"/>
				<SetProperty target="myCustomGrid.myGrid" propertyName="direction" value="vertical" waitEvent="updateComplete" waitTarget="myCustomGrid.myGrid"/>
			</setup>
			<body>
				<AssertPropertyValue target="myCustomGrid.myGrid" propertyName="direction" value="vertical"/>
				<CompareBitmap target="myCustomGrid.myGrid" url="../Properties/baselines/direction_vertical.png" timeout="5000" />
			</body>
		</TestCase>		
	</testCases>
</UnitTester>
