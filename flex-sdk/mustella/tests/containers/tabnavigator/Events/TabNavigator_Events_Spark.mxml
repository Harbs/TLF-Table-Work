		<TestCase testID="TabNavigator_Event_hideToolTip" description="TabNavigator mouseDown event." keywords="[event, hideToolTip, TabNavigator]">
			<setup>
 				<ResetComponent target="tn" className="TNComp3"  waitEvent="updateComplete" waitTarget="tn"/>
 				<RunCode code="decreaseHide()"/>
				<SetProperty target="tn.tabn" propertyName="selectedIndex" value="2" waitTarget="tn.tabn" waitEvent="updateComplete" />			    	
				<SetProperty target="tn.tabn" propertyName="toolTip" value="I am a TabNavigator" waitTarget="tn.tabn" waitEvent="updateComplete"/>
			    <WaitForEffectsToEnd />
			</setup>
			<body>
				
				<DispatchMouseEvent target="tn.tabn" type="mouseOver" localX="22" localY="5" />
				<DispatchMouseEvent target="tn.tabn" type="mouseMove" localX="22" localY="5" />
				<WaitForEvent numExpectedEvents="-1"  eventName="toolTipHide" target="tn.tabn" timeout="5000"/>
				<AssertEvent target="tn.tabn" eventName="toolTipHide" eventClass="mx.events::ToolTipEvent" timeout="5000" />
				<WaitForEffectsToEnd />
			</body>
		</TestCase> 
