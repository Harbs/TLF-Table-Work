        public static function init(o:DisplayObject):void
        {
        }

        public function addConstraintColumns(myCanvas:Canvas):void
        {
            var arr:Array = [];
            var col1:ConstraintColumn = new ConstraintColumn();
            col1.id = "col1";
            col1.width = 100;
            arr.push(col1);
            var col2:ConstraintColumn = new ConstraintColumn();
            col2.id = "col2";
            col2.width = 100;
            arr.push(col2);
            myCanvas.constraintColumns = arr;
        }

        public function addConstraintRows(myCanvas:Canvas):void
        {
            var arr:Array = [];
            var row1:ConstraintRow = new ConstraintRow();
            row1.id = 'row1';
            row1.height = 100;
            arr.push(row1);
            var row2:ConstraintRow = new ConstraintRow();
            row2.id = 'row2';
            row2.height = 100;
            arr.push(row2);
            myCanvas.constraintRows = arr;
        }
        
        public var newCanvas;

        ]]>
       </mx:Script>
