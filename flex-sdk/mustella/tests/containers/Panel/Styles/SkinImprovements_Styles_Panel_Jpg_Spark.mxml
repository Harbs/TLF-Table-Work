<UnitTester testDir="containers/Panel/Styles/"  xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*" testSWF="SkinImprovements_Panel_Basic_Spark.mxml">

    <!-- this set of lines form a template that must be in each unit test -->
    <mx:Script>
    <![CDATA[
    import mx.managers.SystemManager;

    public static function init(o:DisplayObject):void
    {

    }
    
    public function setPercentWidthAndHeight():void{
        
        application.componentPanelJpgBorderSkin.myPanelBSjpg.percentHeight=100;
        application.componentPanelJpgBorderSkin.myPanelBSjpg.percentWidth=100;
        application.componentPanelJpgBorderSkin.myPanelBSjpg.setStyle("paddingTop",78);
        application.componentPanelJpgBorderSkin.myPanelBSjpg.setStyle("paddingBottom",55);
    }
    
    ]]>
    </mx:Script>
    <mx:Metadata>
    <![CDATA[
        [Mixin]
    ]]>
    </mx:Metadata>
    <!-- end of set of lines that must be in each unit test -->

    <testCases>
        <TestCase testID="Spark_Test_Panel_BorderSkin_jpg" description="Skinning Improvements phase I being validated." keywords="[SkinImprovement, Panel, BorderSkin, Jpg]">
            <setup>
                <SetProperty target="skinningVS" propertyName="selectedIndex" valueExpression="value=application.skinningVS.numChildren-1" 
                    waitTarget="skinningVS" waitEvent="change" />
                <SetProperty target="skinningVS" propertyName="selectedIndex" value="3" 
                    waitTarget="skinningVS" waitEvent="change" />
                <ResetComponent target="componentPanelJpgBorderSkin" className="component_Panel_Jpg_BorderSkin" 
                    waitTarget="componentPanelJpgBorderSkin" waitEvent="updateComplete"/>
                <WaitForEffectsToEnd />
            </setup>
            <body>
                <CompareBitmap target="componentPanelJpgBorderSkin" url="../Styles/Baselines/Panel_BorderSkin_scale9_Jpg3_Spark.png" />
            </body>
        </TestCase>
        <TestCase testID="Spark_Test_Panel_BorderSkin_jpg_width_height" description="Skinning Improvements phase I being validated." keywords="[SkinImprovement, Panel, BorderSkin, Jpg, width, height]">
            <setup>
                <SetProperty target="skinningVS" propertyName="selectedIndex" valueExpression="value=application.skinningVS.numChildren-1" 
                    waitTarget="skinningVS" waitEvent="change" />
                <SetProperty target="skinningVS" propertyName="selectedIndex" value="3" 
                    waitTarget="skinningVS" waitEvent="change" />
                <ResetComponent target="componentPanelJpgBorderSkin" className="component_Panel_Jpg_BorderSkin" 
                    waitTarget="componentPanelJpgBorderSkin" waitEvent="updateComplete"/>
                <DispatchMouseClickEvent localX="10" localY="10" target="componentPanelJpgBorderSkin.BtnJpg" timeout="2000" waitTarget="componentPanelJpgBorderSkin.myPanelBSjpg" waitEvent="updateComplete"/>
                <WaitForEffectsToEnd />
            </setup>
            <body>
                <CompareBitmap target="componentPanelJpgBorderSkin" url="../Styles/Baselines/Panel_BorderSkin_scale9_Jpg4_Spark.png" />
            </body>
        </TestCase>
        <TestCase testID="Spark_Test_Panel_BorderSkin_jpg_percent_width_height" description="Skinning Improvements phase I being validated." keywords="[SkinImprovement, Panel, BorderSkin, Jpg, percentWidth, percentHeight]">
            <setup>
                <SetProperty target="skinningVS" propertyName="selectedIndex" valueExpression="value=application.skinningVS.numChildren-1" 
                    waitTarget="skinningVS" waitEvent="change" />
                <SetProperty target="skinningVS" propertyName="selectedIndex" value="3" 
                    waitTarget="skinningVS" waitEvent="change" />
                <ResetComponent target="componentPanelJpgBorderSkin" className="component_Panel_Jpg_BorderSkin" 
                    waitTarget="componentPanelJpgBorderSkin" waitEvent="updateComplete"/>
                <RunCode code="setPercentWidthAndHeight()" timeout="2000" waitTarget="componentPanelJpgBorderSkin.myPanelBSjpg" waitEvent="updateComplete"/>
                <WaitForEffectsToEnd />
            </setup>
            <body>
                <CompareBitmap target="componentPanelJpgBorderSkin" url="../Styles/Baselines/Panel_BorderSkin_scale9_Jpg5_Spark.png" />
            </body>
        </TestCase>
    </testCases>
</UnitTester>
