	<mx:Script>
        <![CDATA[
          	public function changeSkinStates(value:int):void{
			switch(value){
				case 0: 
					myCB.clearStyle('styleName');
					break;
				
				case 1:
					myCB.setStyle('styleName', 'gifEmbeddedComboBox');	
					break;
				
				case 2:
					myCB.setStyle('styleName', 'jpgEmbeddedComboBox');	
					break;
									
				case 3:
					myCB.setStyle('styleName', 'pngEmbeddedComboBox');	
					break;
									
				case 4:
					myCB.setStyle('styleName', 'swfSymbolEmbeddedComboBox');	
					break;
				
				case 5:
					myCB.setStyle('styleName', 'gifRuntimeComboBox');	
					break;

				case 6:
					myCB.setStyle('styleName', 'jpgRuntimeComboBox');	
					break;

				case 7:
					myCB.setStyle('styleName', 'pngRuntimeComboBox');	
					break;

				case 8:
					myCB.setStyle('styleName', 'swfSymbolRuntimeComboBox');	
					break;
			}
		}
		
	    
        ]]>
