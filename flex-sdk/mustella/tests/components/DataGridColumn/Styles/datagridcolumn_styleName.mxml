<UnitTester testDir="components/DataGridColumn/Styles/"  xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*" testSWF="DataGridColumnApp.mxml">
    <!-- this set of lines form a template that must be in each unit test -->
    <mx:Script>
    <![CDATA[
    public static function init(o:DisplayObject):void
    {
    }
    ]]>
    </mx:Script>
    <mx:Metadata>
    <![CDATA[
        [Mixin]
    ]]>
    </mx:Metadata>
    <!-- end of set of lines that must be in each unit test -->

    <mx:Script>
    <![CDATA[

    ]]>
    </mx:Script>

    <testCases>
        <TestCase testID="headerStyleNameAndHeight_multiple" description="Test multiple headerStyleNames for DataGrid. This test will only work with Flex 4 and newer."
            keywords="[DataGrid, headerStyleName, CSS]" >
            <setup>
                <ResetComponent target="dg1" className="mx.controls.DataGrid" waitEvent="updateComplete" />
                <RunCode code="application.showOnlyTheseDataGrids([application.dg1])" />
                <RunCode code="application.setDataProvider(application.dg1, 1)" />
                <SetProperty target="dg1.columns.0" propertyName="width" value="160" />
                <SetProperty target="dg1" propertyName="headerHeight" value="40" waitEvent="updateComplete" waitTarget="dg1"/>
                <SetStyle target="dg1" styleName="headerStyleName" value="testHeaderStyle testHeaderStyle2" waitTarget="dg1" waitEvent="updateComplete" />
            </setup>
            <body>
                <CompareBitmap target="dg1.mx_internal:dataGridHeader.mx_internal:rendererArray.0" url="../Styles/baselines/datagridcolumn_headerStyleNameAndHeight_multiple.png" />
            </body>
         </TestCase>
        <TestCase testID="headerStyleNameAndHeight_multiple_precedence" description="Test multiple styleNames for DataGrid. This test will only work with Flex 4 and newer."
            keywords="[DataGrid, headerStyleName, CSS]" >
            <setup>
                <ResetComponent target="dg1" className="mx.controls.DataGrid" waitEvent="updateComplete" />
                <RunCode code="application.showOnlyTheseDataGrids([application.dg1])" />
                <RunCode code="application.setDataProvider(application.dg1, 1)" />
                <SetProperty target="dg1.columns.0" propertyName="width" value="160" />
                <SetProperty target="dg1" propertyName="headerHeight" value="40" waitEvent="updateComplete" waitTarget="dg1"/>
                <SetStyle target="dg1" styleName="headerStyleName" value="testHeaderStyle testHeaderStyle2 testHeaderStyleLarge" waitTarget="dg1" waitEvent="updateComplete" />
            </setup>
            <body>
                <CompareBitmap target="dg1.mx_internal:dataGridHeader.mx_internal:rendererArray.0" url="../Styles/baselines/datagridcolumn_headerStyleNameAndHeight_precedence.png" />
            </body>
         </TestCase>
    </testCases>
</UnitTester>
