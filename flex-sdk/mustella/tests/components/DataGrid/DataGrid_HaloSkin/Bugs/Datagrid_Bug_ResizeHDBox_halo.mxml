	<mx:Script>
	<![CDATA[
	import mx.controls.DataGrid;
	import mx.controls.dataGridClasses.DataGridColumn;
	import mx.events.DataGridEvent;

	[Bindable]
	public var smallArray:Array
	private function foo():void
	{

	smallArray= [
           { Artist:'Artist A', AHDBoxum:'Album A', Price:11.99, Rating:'Excellent' },
           { Artist:'Artist A', AHDBoxum:'Album B', Price:10.99, Rating:'Excellent' },
           { Artist:'Artist A', AHDBoxum:'Album C', Price:12.99, Rating:'Excellent' },
           { Artist:'Artist A', AHDBoxum:'Album G', Price:11.99, Rating:'Good' },
           { Artist:'Other', AHDBoxum:'Other', Price:5.99, Rating:'Bad' },
         ];
         application.dg1.dataProvider=smallArray;
         application.dg1.allowMultipleSelection = true
         application.dg1.dragEnabled = true
	 }

	 private function addColumns():void
	 {

		var newColumns:Array = [];
		newColumns.push( new DataGridColumn("Artist"))
		application["dgc1"] = newColumns[0];
		newColumns.push( new DataGridColumn ("AHDBoxum"));
		application["dgc2"] = newColumns[1];
		newColumns.push( new DataGridColumn ("Price"));
		application["dgc3"] = newColumns[2];
		newColumns.push( new DataGridColumn ("Rating"));
		application["dgc4"] = newColumns[3];

	   application.dg1.columns = newColumns;
	 }


	]]>
	</mx:Script>

	<testCases>
		<TestCase testID="datagrid_Bug_157493_halo" keywords="[DataGrid, scrollDown, scrollUp, dragDrop, buttonDown]">
			<setup>
				<ResetComponent target="dg1" className="mx.controls::DataGrid" waitEvent="updateComplete" waitTarget="dg1"/>
				<RunCode code="addColumns()"/>
				<RunCode code="foo()"/>

			</setup>
			<body>
				<DispatchMouseEvent target="HDBox" type="mouseMove" localX="405" localY="163" waitEvent="mouseMove" waitTarget="HDBox"/>
				<DispatchMouseEvent target="HDBox" type="mouseDown" localX="405" localY="163" waitEvent="mouseDown" waitTarget="HDBox"/>
				<DispatchMouseEvent target="HDBox" type="mouseMove" stageX="280" stageY="160" waitEvent="mouseMove" waitTarget="HDBox"/>
				<DispatchMouseEvent target="HDBox" type="mouseUp" stageX="280" stageY="160" />
				<DispatchMouseClickEvent target="HDBox" localX="280" localY="160" />
                <WaitForEffectsToEnd/>
                <WaitForLayoutManager/>
				<CompareBitmap target="HDBox" url="../Bugs/baselines/Bug_144334_ResizeHDBox_Sort.png" timeout="5000" numColorVariances="5" ignoreMaxColorVariance="true"/>
		        </body>
	        </TestCase>

	</testCases>
