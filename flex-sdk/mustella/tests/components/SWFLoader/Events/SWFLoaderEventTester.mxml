<UnitTester testDir="components/SWFLoader/Events/"  xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*" testSWF="SWFLoaderMain.mxml">
	<!-- this set of lines form a template that must be in each unit test -->
		<mx:Script>
		<![CDATA[
		public static function init(o:DisplayObject):void
		{
		}
		]]>
		</mx:Script>
		<mx:Metadata>
		<![CDATA[
			[Mixin]
		]]>
		</mx:Metadata>
		<!-- end of set of lines that must be in each unit test -->

		<mx:Script>
		<![CDATA[
		
		import mx.controls.SWFLoader;
		import mx.styles.StyleManager;
		import mx.managers.SystemManager;

		public function scriptFunction(a:String, b:int):String
		{
			return a + ":" + b.toString();
		}

		public var styleDecl:Object;
		public var styleObj:Object;

                private function doTest(loader:SWFLoader) : void 
                {
                    var bytes:ByteArray = new ByteArray();
                    bytes.writeUTFBytes("This is not an image");
                
                    loader.load(bytes);
                }
                
		]]>
		</mx:Script>
		
	<testCases>
	    <TestCase testID="myTest_events_complete"  keywords="[SWFLoader, events, complete]">
		 <setup>
	    	    <ResetComponent target="SWFLoad" className="mx.controls::SWFLoader" waitEvent="updateComplete" waitTarget="SWFLoad"/>
		    <SetProperty target="SWFLoad" propertyName="autoLoad" value="false" />
		 </setup>
		 <body>
		    <SetProperty target="SWFLoad" propertyName="source" value="assets/FlexSWF.swf" />
		    <AssertPropertyValue target="SWFLoad"  propertyName="bytesLoaded" value="NaN" />
		    <RunCode code="application.SWFLoad.load()"/>
		    <Pause timeout="500"/>
		    <AssertEvent target="SWFLoad" eventName="complete" eventClass="flash.events::Event"/>
		    <AssertPropertyValue target="SWFLoad"  propertyName="bytesLoaded" valueExpression ="value=application.SWFLoad.bytesTotal" />
		 </body>
	    </TestCase>
	    <TestCase testID="SWFLoader_events_ioError"  keywords="[SWFLoader, events, error]" description="verify that you get an ioError event triggered
		   when trying to write an invalid ByteArray." >
		 <setup>
		    <ResetComponent target="SWFLoad" className="mx.controls::SWFLoader" waitEvent="updateComplete" waitTarget="SWFLoad" />
		 </setup>
		 <body>
		    <RunCode code="doTest(application.SWFLoad)"/>
		    <AssertEvent target="SWFLoad" eventName="ioError" eventClass="flash.events::IOErrorEvent"/>
	        </body>
            </TestCase>
	</testCases>
</UnitTester>

