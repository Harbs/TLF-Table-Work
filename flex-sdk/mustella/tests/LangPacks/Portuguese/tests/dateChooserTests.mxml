	<testCases>
                <TestCase testID="PT_DateChooser_Portuguese_Layout" description="Test that Portuguese DateChooser layout is correct." keywords="[DateChooser, layout]">
			<setup>
			    <ResetComponent target="dc" className="mx.controls.DateChooser"  waitEvent="updateComplete" waitTarget="dc"/> 
			    <SetProperty target="dc" propertyName="selectedDate" valueExpression="value=new Date(2005, 2, 5)" waitEvent="updateComplete" waitTarget="dc"/>
			</setup>
			<body>
				<CompareBitmap target="dc" url="../tests/baselines/$testID.png" timeout="5000" />
			</body>
		</TestCase>
		
		<TestCase testID="PT_DateChooser_Property_DayNames_Default" keywords="[dayNames, DateChooser]">
			<setup>
				<ResetComponent target="dc" className="mx.controls.DateChooser"  waitEvent="updateComplete" waitTarget="dc"/> 
			    <SetProperty target="dc" propertyName="selectedDate" valueExpression="value=new Date(2005, 2, 5)" waitEvent="updateComplete" waitTarget="dc"/>
			</setup>
			<body>
				<AssertPropertyValue target="dc" propertyName="dayNames" value="[ 'D','S', 'T', 'Q', 'Q', 'S', 'S' ]" />
			</body>
		</TestCase>
		<TestCase testID="PT_DateChooser_Property_MonthNames_Default" keywords="[monthNames, DateChooser]">
			<setup>
				<ResetComponent target="dc" className="mx.controls.DateChooser"  waitEvent="updateComplete" waitTarget="dc"/> 
			    <SetProperty target="dc" propertyName="selectedDate" valueExpression="value=new Date(2005, 2, 5)" waitEvent="updateComplete" waitTarget="dc"/>
			</setup>
			<body>
				<AssertPropertyValue target="dc" propertyName="monthNames" value="['Janeiro','Fevereiro','Março','Abril','Maio','Junho','Julho','Agosto','Setembro','Outubro','Novembro','Dezembro']" />
			</body>
		</TestCase>
		
                <TestCase testID="PT_DateChooser_Property_yearSymbol_Default"  keywords="[yearSymbol, DateChooser]">
			<setup>
				<ResetComponent target="dc" className="mx.controls.DateChooser"  waitEvent="updateComplete" waitTarget="dc"/> 
			    <SetProperty target="dc" propertyName="selectedDate" valueExpression="value=new Date(2005, 2, 5)" waitEvent="updateComplete" waitTarget="dc"/>				
			</setup>
			<body> 
				<AssertPropertyValue target="dc" propertyName="yearSymbol" value="" />
			</body>
		</TestCase>
                <TestCase testID="PT_DateChooser_Property_monthSymbol_Default"  keywords="[monthSymbol, DateChooser]">
