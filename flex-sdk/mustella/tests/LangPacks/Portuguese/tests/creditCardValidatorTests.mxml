            <setup>
                <ResetComponent target="ct" className="components.CustomTester" waitEvent="updateComplete" waitTarget="ct" />
                    <SetProperty target="ct.myCreditV.myCCV" propertyName="allowedFormatChars" value="weçÇ" />
                    <SetProperty target="ct.myCreditV.ti1" propertyName="text" value="Visa" waitEvent="updateComplete" waitTarget="ct.myCreditV.ti1"/>
                    <SetProperty target="ct.myCreditV.ti2" propertyName="text" value="4207weçÇ7340weçÇ0997weçÇ7262" waitEvent="updateComplete" waitTarget="ct.myCreditV.ti2"/>
            </setup>
            <body>
