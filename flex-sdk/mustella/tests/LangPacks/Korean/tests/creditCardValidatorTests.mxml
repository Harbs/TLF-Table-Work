        <TestCase frequency="all" testID="KO_CreditCardValidator_allowedFormatChars_Ko" description="Test that the validator recognized Korean chacters that is valid." keywords="[Runtime Localization,CreditCardValidator,allowedFormatChars]" >
            <setup>
                <ResetComponent target="ct" className="components.CustomTester" waitEvent="updateComplete" waitTarget="ct" />
                    <SetProperty target="ct.myCreditV.myCCV" propertyName="allowedFormatChars" value="월년" />
                    <SetProperty target="ct.myCreditV.ti1" propertyName="text" value="Visa" waitEvent="updateComplete" waitTarget="ct.myCreditV.ti1"/>
                    <SetProperty target="ct.myCreditV.ti2" propertyName="text" value="4207월년7340월년0997월년7262" waitEvent="updateComplete" waitTarget="ct.myCreditV.ti2"/>
            </setup>
            <body>
                <RunCode code="application.ct.myCreditV.myCCV.validate(application.ct.myCreditV.def)"/>  
                <AssertEvent target="ct.myCreditV.myCCV" eventName="valid" eventClass="mx.events::ValidationResultEvent" />
                <AssertNoEvent target="ct.myCreditV.myCCV" eventName="invalid" />
            </body>
        </TestCase>        
        
