<UnitTester xmlns:fx="http://ns.adobe.com/mxml/2009"
			xmlns:mx="library://ns.adobe.com/flex/mx" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns="*" 
			testDir="mobile/utils/MultiDPIBitmapSource/integration/"
			testSWF="MultiDPIBitmapSourceScaling.mxml">
	
	<fx:Script>
		<![CDATA[
			public static function init(o:DisplayObject):void { }
		]]>
	</fx:Script>
	<fx:Metadata><![CDATA[ [Mixin] ]]></fx:Metadata>
	<testCases>
		
		<TestCase testID="MultiDPIBitmapSource_scaling_refer" keywords="MultiDPIBitmapSource,scaling,referenced" description="fully defined MDBS should not be scaled when application scaling is in effect">
			<setup>
				<ResetComponent target="integrationRoot" className="comps.IntegrationRoot" waitEvent="updateComplete" />
				<SetProperty target="integrationRoot" propertyName="currentState" value="Referrenced"/>
			</setup>
			<body>
				<RunCode code="application.integrationRoot.changeSource(0)" waitTarget="integrationRoot" waitEvent="rootReady" />
				<CompareBitmap target="integrationRoot"  url="../integration/baselines/">
					<ConditionalValue deviceDensity="160"/>
					<ConditionalValue deviceDensity="320"/>
							
				</CompareBitmap>
			</body>
		</TestCase>
        
        <TestCase testID="MultiDPIBitmapSource_scaling_embed" keywords="MultiDPIBitmapSource,scaling,embedded" description="fully defined MDBS should not be scaled when application scaling is in effect">
            <setup>
                <ResetComponent target="integrationRoot" className="comps.IntegrationRoot" waitEvent="updateComplete" />
                <SetProperty target="integrationRoot" propertyName="currentState" value="Embedded"/>
            </setup>
            <body>
                <RunCode code="application.integrationRoot.changeSource(0)" waitTarget="integrationRoot" waitEvent="rootReady" />
                <CompareBitmap target="integrationRoot"  url="../integration/baselines/">
                    <ConditionalValue deviceDensity="160"/>
                    <ConditionalValue deviceDensity="320"/>
							
                </CompareBitmap>
            </body>
        </TestCase>


	</testCases>
</UnitTester>
