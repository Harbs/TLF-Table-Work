<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="Uppercase AND and Android 240dpi query">
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		.buttonUpperCaseANDAndroid240dpiTest
		{
			chromeColor: #AAAAAA;
			color: #000000;
			fontSize: 24;
		}
		@media screen AND (application-dpi: 240)
		{
			.buttonUpperCaseANDAndroid240dpiTest
			{
				chromeColor: #990000;
				color: #009900;
				fontSize: 26;
			}
		}
		@media screen AND (os-platform: "Android") AND (application-dpi: 240)
		{
			.buttonUpperCaseANDAndroid240dpiTest
			{
				chromeColor: #990000;
				color: #009900;
				fontSize: 26;
			}
		}
	</fx:Style>
	<s:Button id="testButton" label="test button" styleName="buttonUpperCaseANDAndroid240dpiTest" left="10" top="10" />
	
	<s:VGroup top="100" left="10" right="10" bottom="10">
		<s:Label fontWeight="bold" text="Expected Output:" fontSize="20" color="#666666" />
		<s:Label text="Android 240dpi devices: 26 font, green text, red chrome" fontSize="16" color="#666666" />
		<s:Label text="Others: 24 font, black text, gray chrome" fontSize="16" color="#666666" />
	</s:VGroup>
</s:View>
