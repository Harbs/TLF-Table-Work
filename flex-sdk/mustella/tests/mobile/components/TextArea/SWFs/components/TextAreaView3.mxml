	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	width="100%" height="100%" >

	<fx:Script>
	<![CDATA[
		
		import components.*;

		public var longString:String = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec felis nunc, ultrices nec molestie a, dictum sed lacus. Vestibulum adipiscing dolor sed libero aliquet consectetur.";
		public var shortString:String = "Lorem ipsum";
	]]>
	</fx:Script>

	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
		.colorStyle{
			color: #ff0000;
			focusColor: #00ff00;
			contentBackgroundColor: #0000ff;
		}
	</fx:Style>

	<s:VGroup x="0" y="20">
		<!-- This field is used for styles set in MXML. -->
		<s:Group id="grp1" percentWidth="100" height="60">
			<s:TextArea text="iiii" id="ta1" 
				x="10" y="10" percentWidth="80" height="50"
				color="0xff0000" focusColor="0x00ff00" contentBackgroundColor="0x0000ff" />
		</s:Group>
		
		<!-- This field is used for styles set in AS. -->
		<s:Group id="grp2" percentWidth="100" height="60">
			<s:TextArea text="iiii" id="ta2"
				x="10" y="10" percentWidth="80" height="50" />
		</s:Group>
				
		<!-- This field is used for styles set in CSS. -->
		<s:Group id="grp3" percentWidth="100" height="60">
			<s:TextArea text="iiii" id="ta3"
				x="10" y="10" percentWidth="80" height="50"
				styleName="colorStyle" />
		</s:Group>

		<!-- This field is used as a default. (e.g. To be sure height adjusts automatically.) -->
		<s:Group id="grp4" >
			<s:TextArea text="iiii" id="ta4" />
		</s:Group>
		
	</s:VGroup>
</s:View>
