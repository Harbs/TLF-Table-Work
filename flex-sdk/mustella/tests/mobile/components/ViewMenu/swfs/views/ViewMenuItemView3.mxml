<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        title="ViewMenuItem3" initialize="view1_initializeHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			protected function view1_initializeHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				addEventListener("viewMenuOpen", listenerOpen);
				addEventListener("viewMenuClose", listenerClose);
			}
			protected function listenerOpen(evt:Event):void
			{
				trace("viewMenuOpen");
			}
			protected function listenerClose(evt:Event):void
			{
				trace("viewMenuClose");
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="portrait"/>
		<s:State name="landscape"/>
	</s:states>
	<s:viewMenuItems >
		<s:ViewMenuItem id="i1" label.portrait="add" label.landscape="This is a long label, it should be truncated" icon="@Embed('../menuIcons/addIcon.png')" click="btn.label='click1'" />
		<s:ViewMenuItem id="i2" label="Chevron" icon="{Chevron}" iconPlacement="bottom" click="btn.label='click2'"/>
		<s:ViewMenuItem id="i3" label="edit" icon="@Embed('../menuIcons/editIcon.png')" iconPlacement.portrait="right" iconPlacement.landscape="left" click="btn.label='click3'"/>
	</s:viewMenuItems>
	<s:Button id="btn" label="btn" width="100" height="70"/>

</s:View>
